@page "{id:int}"
@model IGI_Web_953501_Smolyar.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Drink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Drink.Id" />
            <div class="form-group">
                <label asp-for="Drink.Name" class="control-label"></label>
                <input asp-for="Drink.Name" class="form-control" />
                <span asp-validation-for="Drink.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Description" class="control-label"></label>
                <input asp-for="Drink.Description" class="form-control" />
                <span asp-validation-for="Drink.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Cost" class="control-label"></label>
                <input asp-for="Drink.Cost" class="form-control" />
                <span asp-validation-for="Drink.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Drink.Image))
                {
                    <img src=~/Images/@Model.Drink.Image
                         alt="NoSuchFile" width="150" />

                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="form-group">
                    <label class="control-label" asp-for="Drink.Image">Выбрать изображение</label>
                    <div class="custom-file">
                        <label class="custom-file-label" asp-for="Drink.Image">Изображение</label>
                        <input type="file" class="custom-file-input" id="Image" name="Image">
                    </div>
                </div>
            </div>
                <div class="form-group">
                    <label asp-for="Drink.GroupId" class="control-label"></label>
                    <select asp-for="Drink.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                    <span asp-validation-for="Drink.GroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

